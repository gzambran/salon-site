---
const testimonials = [
  {
    name: 'Yuly S.',
    text: 'Se nota cuando vengo a Susana Beauty Salon.',
  },
  {
    name: 'Kathy M.',
    text: 'Excelente servicio, los tratamientos capilares realmente transforman mi cabello y me encanta.',
  },
  {
    name: 'Erika M.',
    text: 'Me siento feliz con mi nuevo corte, tratamiento y color.',
  },
];
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-heading font-semibold text-gray-900 mb-4">
        Lo Que Dicen Nuestras Clientas
      </h2>
      <div class="w-24 h-1 bg-gold mx-auto"></div>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100">
          <!-- Quote Icon -->
          <svg class="w-8 h-8 text-gold/40 mb-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
          </svg>

          <!-- Quote Text -->
          <p class="text-gray-600 italic mb-6">
            "{testimonial.text}"
          </p>

          <!-- Client Name -->
          <p class="font-heading font-semibold text-gray-900">
            {testimonial.name}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
