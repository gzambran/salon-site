<section id="nosotros" class="py-20 bg-cream">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Image Column -->
      <div class="relative">
        <!-- PLACEHOLDER - Replace with actual photo -->
        <div class="aspect-[4/5] bg-gray-100 rounded-2xl overflow-hidden shadow-lg">
          <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
            <div class="text-center p-8">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
