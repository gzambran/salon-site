---
const images = [
  { src: '/images/1.jpg', alt: 'Salon Sona - Trabajo 1' },
  { src: '/images/2.jpg', alt: 'Salon Sona - Trabajo 2' },
];
---

<section id="galeria" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-heading font-semibold text-gray-900 mb-4">
        Nuestra Galer√≠a
      </h2>
      <div class="w-24 h-1 bg-gold mx-auto mb-6"></div>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Algunos de nuestros trabajos favoritos
      </p>
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      {images.map((image) => (
        <div class="relative aspect-square overflow-hidden rounded-lg group">
          <img
            src={image.src}
            alt={image.alt}
            class="w-full h-full object-cover transition-transform duration-500 [@media(hover:hover)]:group-hover:scale-110"
            loading="lazy"
          />
          <!-- Gold overlay -->
          <div class="absolute inset-0 bg-gold/20 group-hover:bg-gold/10 transition-colors duration-300"></div>
        </div>
      ))}
    </div>
  </div>
</section>
